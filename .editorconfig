# Info about .editorconfig:
# https://editorconfig.org/ or for the exact specs:
# https://editorconfig-specification.readthedocs.io/
root = true

[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{makefile,*.json}]
indent_size = 4
indent_style = tab
insert_final_newline = true
